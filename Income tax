import java.util.Scanner;

class tax

{

public static void main(String args[])

{

double tax=0,it;

Scanner sc=new Scanner(System.in);

System.out.print("Enter income ");

it=sc.nextDouble();

if(it<0)

System.out.print("enter only the positive integers");

else if(it<=150000)

tax=0;

else if(it>=150001 && it<=300000)

tax=0.1*it;

else if(it>=300001 && it<=500000)

tax= 0.2*it;

else

tax=0.3*it;

System.out.print("Income tax amount is "+tax);

}

}
